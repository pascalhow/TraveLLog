<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true"
    android:foreground="?android:selectableItemBackground"
    android:orientation="vertical"
    app:cardElevation="2dp"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/mytrips_cover"
            android:layout_width="match_parent"
            android:layout_height="@dimen/my_trips_cover_photo_height"
            android:background="@android:color/darker_gray" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/my_trips_text_margin"
            android:text="@string/my_trips_album_title"
            android:textAppearance="?android:textAppearanceMedium"
            android:textSize="@dimen/my_trips_title_text_size" />
    </LinearLayout>
</android.support.v7.widget.CardView>
